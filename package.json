{
  "name": "raft-consensus-simulator",
  "version": "2.0.0",
  "description": "Raft consensus algorithm simulator with real-time visualization",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "vite --host 0.0.0.0 --port 3001",
